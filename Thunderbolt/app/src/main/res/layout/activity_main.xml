<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.thunderbolt.MainActivity"
    android:background="@drawable/tt">

    <Button
        android:text="Connect to Thunderbolt"
        android:id="@+id/Devices"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#fff3f3f3"
        android:textSize="17dp"
        android:layout_weight="1.08"
        android:layout_height="60dp"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#fff3f3f3" />

    <Button
        android:layout_height="wrap_content"
        android:text="Deactivate Bluetooth"
        android:id="@+id/buttonDisconnect"
        android:background="#fff3f3f3"
        android:textSize="17dp"
        android:layout_width="210dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"

        android:backgroundTint="#fff3f3f3" />

    <Button
        android:layout_height="wrap_content"
        android:text="Activate Bluetooth"
        android:id="@+id/buttonConnect"
        android:background="#fff3f3f3"
        android:textSize="17dp"
        android:layout_width="210dp"
        android:backgroundTint="#fff3f3f3"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/status"
        android:textSize="25dp"
        android:textColor="#080c17"
        android:layout_marginTop="275dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:textColor="#080c17"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtInfo" />

</RelativeLayout>
